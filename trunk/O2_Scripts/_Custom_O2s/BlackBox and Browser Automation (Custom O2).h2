var ribbon = topPanel.add_Control&lt;WPF_Ribbon&gt;();
ribbon.title("BlackBox (plus IE Automation, Javascript, Html)");
 
var browserAutomation = ribbon.Ribbon.add_RibbonTab("Browser Automation");   
